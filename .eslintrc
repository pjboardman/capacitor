{
    "parser": "babel-eslint",
    "rules": {
        "strict": 0,
        "indent": 0,
        "quotes": 0,
        "linebreak-style": [ 2, "unix" ],
        "semi": [ 2, "never" ],
        "no-unused-vars": [ 1, { "varsIgnorePattern": "should" } ],
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "ecmaFeatures": {
        "jsx": true,
        "experimentalObjectRestSpread": true,
        "arrowFunctions": true,
        "blockBindings": true,
        "classes": true,
        "defaultParams": true,
        "modules": true
    },
    "plugins": [
    ],
    "globals": {
      "describe": true,
      "it": true,
      "before": true,
      "beforeEach": true,
      "after": true,
      "afterEach": true,
    }
}
